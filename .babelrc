{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ],
    [
      "module-resolver",
      {
        "root": [
          "./"
        ],
        "alias": {
          "@assets": "./src/assets",
          "@components": "./src/components",
          "@constants": "./src/constants",
          "@containers": "./src/containers",
          "@helpers": "./src/helpers",
          "@hooks": "./src/hooks",
          "@services": "./src/services",
          "@context": "./src/context",
          "@styles": "./src/styles",
          "@mock": "./__mocks__",
          "@public": "./public"
        }
      }
    ]
  ]
}